{
  "compilerOptions": {
    "outDir": "./dist/",
    "rootDir": "src",
    "module": "ES2020",
    "target": "ES2020",
    "resolveJsonModule": true,
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "declarationMap": true,
    "skipLibCheck": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "typeRoots": ["./types", "node_modules/@types"],
  },
  "include": [
    "src/**/*.ts"
  ]
}